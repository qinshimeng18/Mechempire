<% if @user.errors.any? %>
  <div class="panel panel-danger">
    <div class="panel-heading">
      <%= @user.errors.count %> 个表单错误，请重新填写.
    </div>
    <div class="panel-body">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>