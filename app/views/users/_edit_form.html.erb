<%= form_for(@user) do |f|%>
  <%= render 'shared/error_messages' %>
  
  <div class="form-group">
    <%= f.label :name , :value => "用户名:"%><br>
    <%= f.text_field :name , :class => "form-control", :placeholder => " 请输入用户名"%>
  </div>
  <div class="form-group">
    <%= f.label :email , :value => "邮 箱:"%><br>
    <%= f.email_field :email , :class => "form-control", :placeholder => " 请输入注册邮箱", :disabled => true%>
  </div>
  <div class="form-group">
    <%= f.label :password, :value => "密 码:"%><br>
    <%= f.password_field :password , :class => "form-control", :placeholder => "请输入最短六位的密码"%>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, :value => "确认密码:"%><br>
    <%= f.password_field :password_confirmation , :class => "form-control", :placeholder => "请输入确认密码"%>
  </div>
  <div class="form-group">
    <%= f.submit :class => "btn btn-success btn-block", :value => "确认修改" %>
  </div>
<% end %>
